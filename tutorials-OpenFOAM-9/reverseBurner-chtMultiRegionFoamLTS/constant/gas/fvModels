FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant";
    object      fvModels;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ignition
{
    type            heatSource;

    selectionMode   cellSet;
    cellSet         ignition;

    q
    {
        type        scale;
        scale       squarePulse;
        start       0;
        duration    1000;
        value       5e7;
    }
}

radiation
{
    type    radiation;
    libs    ("libradiationModels.so");
}

